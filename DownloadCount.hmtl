<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestionnaire de Téléchargements</title>
    
    <style>
        /* --- STYLE CSS --- */
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            line-height: 1.6;
            padding: 40px;
            background-color: #f4f7f6;
        }

        .download-container {
            background: white;
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 600px;
        }

        .btn-download {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 15px;
            transition: background 0.3s ease;
        }

        .btn-download:hover {
            background-color: #0056b3;
        }

        .btn-download:active {
            transform: translateY(1px);
        }

        .counter-info {
            font-size: 0.9em;
            color: #666;
        }

        .counter-number {
            font-weight: bold;
            color: #007bff;
        }
    </style>
</head>
<body>

    <h1>Documents Techniques</h1>

    <div class="download-container">
        <button class="btn-download" 
                data-key="guide-hoymiles-v1" 
                data-url="https://jm-grelaud.github.io/miroir-video/Miroir%20Vid%C3%A9o-Manuel%20Utilisateur.pdf">
            Télécharger le Manuel Utilisaatuer
        </button>
        <div class="counter-info">
            Téléchargé <span id="count-MiroirVideo-MU" class="counter-number">...</span> fois
        </div>
    </div>

    <script>
        // Remplacez par votre domaine pour isoler vos compteurs
        const NAMESPACE = "Miroir-Video"; 

        // 1. Initialisation : Charger les chiffres actuels au démarrage de la page
        document.querySelectorAll('.btn-download').forEach(btn => {
            const key = btn.getAttribute('data-key');
            const display = document.getElementById(`count-${key}`);

            fetch(`https://api.countapi.xyz/get/${NAMESPACE}/${key}`)
                .then(res => res.json())
                .then(res => {
                    if(display) display.innerText = res.value || 0;
                })
                .catch(() => {
                    if(display) display.innerText = "0";
                });
        });

        // 2. Gestion universelle des clics
        document.addEventListener('click', function(event) {
            // Vérifie si on a cliqué sur un bouton de téléchargement
            if (event.target.classList.contains('btn-download')) {
                const btn = event.target;
                const key = btn.getAttribute('data-key');
                const fileUrl = btn.getAttribute('data-url');
                const display = document.getElementById(`count-${key}`);
                
                let downloadStarted = false;

                // Fonction de sécurité pour lancer le téléchargement
                function triggerDownload() {
                    if (!downloadStarted) {
                        downloadStarted = true;
                        // Optionnel : petit feedback visuel
                        const originalText = btn.innerText;
                        btn.innerText = "Merci !";
                        setTimeout(() => btn.innerText = originalText, 2000);
                        
                        // Lancement effectif
                        window.location.href = fileUrl;
                    }
                }

                // Incrémentation via l'API
                fetch(`https://api.countapi.xyz/hit/${NAMESPACE}/${key}`)
                    .then(res => res.json())
                    .then(res => {
                        if(display) display.innerText = res.value;
                        triggerDownload();
                    })
                    .catch(() => {
                        // En cas d'erreur API ou bloqueur, on télécharge quand même
                        triggerDownload();
                    });

                // Sécurité : si l'API ne répond pas dans la seconde, on force
                setTimeout(triggerDownload, 1000);
            }
        });
    </script>

</body>
</html>
